<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mindmap.activity"
    android:versionCode="1"
    android:versionName="1.0" 
    android:installLocation="auto">
 <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
 <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
 <uses-permission android:name="android.permission.CAMERA" />
 <uses-feature android:name="android.hardware.camera" />
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        >
        <activity
            android:name="com.mindmap.activity.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <activity
            android:label="@string/create"
           android:name="com.mindmap.activity.WorkspaceActivity" 
           android:theme="@style/AppBaseTheme"
           
           >
        </activity>
        <activity
            android:label="@string/browse"
            android:name="com.mindmap.activity.FileBrowser" >
        </activity>
        <activity
            android:label="Select Workspace Background"
            android:name="com.mindmap.activity.LayoutBackgroundActivity" >
        </activity>
    </application>

</manifest>
